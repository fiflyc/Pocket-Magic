<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbhse.pocketmagic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">

        <activity android:name="ru.spbhse.pocketmagic.LoadActivity" />
        <activity android:name="ru.spbhse.pocketmagic.OpponentSearchActivity" />
        <activity android:name="ru.spbhse.pocketmagic.GameResultsActivity" />
        <activity android:name="ru.spbhse.pocketmagic.GameActivity" />
        <activity
            android:name="ru.spbhse.pocketmagic.MainActivity"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>